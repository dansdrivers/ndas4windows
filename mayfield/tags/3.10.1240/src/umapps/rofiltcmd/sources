TARGETTYPE=PROGRAM
TARGETPATH=obj

!IF $(FREEBUILD)
USE_MSVCRT=1
!ELSE
USE_LIBCMT=1
DEBUG_CRTS=1
!ENDIF

C_DEFINES=/DUNICODE /D_UNICODE
INCLUDES=$(NDAS_INC_PATH);$(NDAS_INC_PATH)\ndas;$(PSDK_INC_PATH)
RCOPTIONS=/i $(NDAS_SDK_INC_PATH) 
