TARGETLIBS= \
	$(NDAS_LIB_PATH)\rofiltctl.lib \
	$(PSDK_LIB_PATH)\kernel32.lib \
	$(PSDK_LIB_PATH)\user32.lib \
	$(PSDK_LIB_PATH)\setupapi.lib 
	
