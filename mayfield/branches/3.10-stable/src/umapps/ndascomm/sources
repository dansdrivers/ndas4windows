TARGETNAME=ndascomm
TARGETTYPE=DYNLINK
TARGETPATH=obj

BUILD_PRODUCES=ndascomm

INCLUDES=$(NDAS_INC_PATH);$(PSDK_INC_PATH)

MSC_WARNING_LEVEL=-W3 -WX

DLLDEF=ndascomm.def
UMTYPE=windows
#
# Without DLLENTRY, you won't get DllMain run
#
DLLENTRY=_DllMainCRTStartup

C_DEFINES=/DUNICODE /D_UNICODE /DNDASCOMM_EXPORTS
USECXX_FLAG=/Tp
#USER_C_FLAGS=
USE_STL=1

!IF $(FREEBUILD)
USE_MSVCRT=1
!ELSE
USE_LIBCMT=1
DEBUG_CRTS=1
!ENDIF

MSC_WARNING_LEVEL=-W3 -WX

PRECOMPILED_INCLUDE=stdafx.h
PRECOMPILED_CXX=1

BUILD_CONSUMES=des
BUILD_CONSUMES=hash
BUILD_CONSUMES=ndasidenc

TARGETLIBS= \
	$(NDAS_LIB_PATH)\hash.lib \
	$(NDAS_LIB_PATH)\des.lib \
	$(NDAS_LIB_PATH)\scrc32.lib \
	$(NDAS_LIB_PATH)\ndasidenc.lib \
	$(NDAS_LIB_PATH)\ndasid.lib \
	$(PSDK_LIB_PATH)\kernel32.lib \
	$(PSDK_LIB_PATH)\user32.lib \
	$(PSDK_LIB_PATH)\advapi32.lib \
	$(PSDK_LIB_PATH)\ws2_32.lib

SOURCES= \
	dllentry.cpp \
	ndasdevop.cpp \
	ndascomm.cpp \
	ndascomm.rc

# publish lib files to the project root
PASS1_PUBLISH= {$(O)\$(TARGETNAME).lib=$(NDAS_LIB_PATH)\$(TARGETNAME).lib}

