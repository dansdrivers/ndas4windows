TARGETNAME=nbcommon
TARGETTYPE=LIBRARY
TARGETPATH=obj

BUILD_PRODUCES=nbcommon
BUILD_CONSUMES=ndascomm
BUILD_CONSUMES=ndasop

!IF $(FREEBUILD)
USE_MSVCRT=1
!ELSE
USE_LIBCMT=1
DEBUG_CRTS=1
!ENDIF

C_DEFINES=/DUNICODE /D_UNICODE

NBCOMMON_LIB_PATH=..\lib\$(DDKBUILDENV)\$(TARGET_DIRECTORY)

INCLUDES=$(NDAS_INC_PATH);$(NDAS_PUBLIC_INC_PATH);$(PSDK_INC_PATH);
USECXX_FLAG=/Tp
USER_C_FLAGS=/EHsc /Wp64
USE_RTTI=1
USE_STL=1
#
# PCH is not compatible with LTCG
# as LTCG will not create a stdafx.pch,
# which will result recompilation of all cpp file in every build.
# It is no sense to use LTCG for libraries.
#
LINK_TIME_CODE_GENERATION=1

X_USE_WTL_71=1
USE_STATIC_ATL=1

!INCLUDE "xmatl.mk"

MSC_WARNING_LEVEL=-W3 -WX
#MSC_OPTIMIZATION=/Oitb2
#MSC_OPTIMIZATION=/Od /Oi

#PRECOMPILED_INCLUDE=stdafx.h
#PRECOMPILED_CXX=1

SOURCES=\
	ndasdevice.cpp \
	ndasexception.cpp \
	ndashelper.cpp \
	ndasinfohandler.cpp \
	ndaslanimpl.cpp \
	ndasobject.cpp \
	ndasobjectbuilder.cpp \
	ndasobserver.cpp \
	ndassector.cpp \
	ndassession.cpp \
	ndasutil.cpp \
	ndasmirrorthread.cpp

# publish lib files to the project root
PASS1_PUBLISH= {$(O)\$(TARGETNAME).lib=$(NBCOMMON_LIB_PATH)\$(TARGETNAME).lib}
