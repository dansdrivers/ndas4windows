TARGETNAME=libxcrypt
TARGETTYPE=LIBRARY
TARGETPATH=obj

BUILD_PRODUCES=libxcrypt

INCLUDES=$(NDAS_INC_PATH);$(PSDK_INC_PATH)

MSC_WARNING_LEVEL=-W3 -WX -Wp64

C_DEFINES=/DUNICODE /D_UNICODE
USECXX_FLAG=/Tp
USE_NATIVE_EH=1

!IF $(FREEBUILD)
USE_MSVCRT=1
!ELSE
USE_LIBCMT=1
DEBUG_CRTS=1
!ENDIF

#PRECOMPILED_INCLUDE=stdafx.h
#PRECOMPILED_CXX=1

SOURCES= \
	xcrypt_hash.cpp \
	xcrypt_encrypt.cpp \
	md5.cpp

# publish lib files to the project root
PASS1_PUBLISH= {$(O)\$(TARGETNAME).lib=$(NDAS_LIB_PATH)\$(TARGETNAME).lib}
