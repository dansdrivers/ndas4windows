TARGETNAME=ndasdi
TARGETTYPE=PROGRAM
TARGETPATH=obj
UMENTRY=wmain
UMTYPE=console

BUILD_PRODUCES=ndasdi_cmd
BUILD_CONSUMES=ndasdi

C_DEFINES=/DUNICODE /D_UNICODE
INCLUDES=..\..\inc;$(NDAS_INC_PATH);$(NDAS_INC_PATH)\ndas;$(PSDK_INC_PATH)
RCOPTIONS=/i $(PSDK_INC_PATH)
USECXX_FLAG=/Tp
USER_C_FLAGS=/Wp64

PRECOMPILED_INCLUDE=stdafx.h
PRECOMPILED_CXX=1

!IF $(FREEBUILD)
USE_MSVCRT=1
LINKER_NOREF=1
!ELSE
USE_LIBCMT=1
DEBUG_CRTS=1
!ENDIF

MSC_WARNING_LEVEL=-W3 -WX
MSC_OPTIMIZATION=/Oitb2

BUILD_CONSUMES=ndasdi

TARGETLIBS=\
	$(NDAS_LIB_PATH)\ndasdi.lib \
	$(PSDK_LIB_PATH)\user32.lib \
	$(PSDK_LIB_PATH)\shlwapi.lib \
	$(PSDK_LIB_PATH)\kernel32.lib \
	$(PSDK_LIB_PATH)\setupapi.lib \
	$(SDK_LIB_PATH)\newdev.lib \
    $(SDK_LIB_PATH)\uuid.lib \
    $(PSDK_LIB_PATH)\ole32.lib

SOURCES=main.cpp
